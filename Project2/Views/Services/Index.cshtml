@model IEnumerable<Project2.Models.Services>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_myTemplate.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table style="margin-top:100px" class="table table-striped">
    <tr>
        <th>
            City Departure
        </th>
        <th>
            City Arrival
        </th>
        <th>
            Time of Departure
        </th>
        <th>
            Time of Arrival
        </th>   
        <th>
            Price
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cityFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cityTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timeDeparture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timeArrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>